    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bandeira_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bandeira"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bandeira_image"
            android:layout_toEndOf="@id/bandeira_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Resíduos Sólidos Urb tes tes etetteasldkjlk dalksjdlajsdlkajsdlajsdlkajsd"
                />

            <TextView
                android:id="@+id/valueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16sp"
                android:text="R$ 360.000,00"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                android:text="30/07/2008"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="13sp"
            android:text="SEBERI - RS"
            android:layout_marginRight="20dp"
            android:textColor="@color/secondary_text"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</RelativeLayout>