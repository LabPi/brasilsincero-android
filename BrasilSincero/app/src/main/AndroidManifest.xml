<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericmguimaraes.brasilsincero">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DenunciationsActivity"
            android:label="@string/title_activity_denunciations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FilterActivity"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GraphsActivity"
            android:label="@string/title_activity_graphs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConvenioDetailsActivity"
            android:label="@string/title_activity_convenio_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DenuntiantionRegistActivity"
            android:label="@string/title_activity_denuntiantion_regist"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>